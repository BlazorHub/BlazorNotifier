@inject BlazorNotifierClientService Notifi
@if (Notifi.CountOfNotifications > 0)
{
    <div class="notification-area">
        @foreach (var progress in Notifi.Notification.Progress)
        {
            <BlazorNotifier.Components.NotifierProgress Progress="@progress" OnClose="@(() => Notifi.CloseProgress(progress.Id))"/>
        }
        @foreach (var message in Notifi.Notification.Messages)
        {
            <BlazorNotifier.Components.NotifierMessage Message="@message" OnClose="@(() => Notifi.CloseMessage(message.Id))"/>
        }
    </div>

}
